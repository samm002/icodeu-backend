<html lang="en">
  <head>
    <%- include('../../layouts/head.ejs') %>
  </head>
  <body>
    <div id="home">
      <%- include('../../layouts/navbar.ejs') %>
      <div class="container mt-5">
        <h1 class="title-top text-uppercase">Product Section</h1>
        <div class="bg-primary-dark block block-products">
          <div class="product-table-container">
            <table class="table table-hover table-small product-table">
              <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">&nbsp;</th>
                  <th scope="col">&nbsp;</th>
                  <th scope="col">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% blogs.map((item)=>{ %>
                  <tr>
                    <td class="product-name text-nowrap w-100"><%= item.title %></td>
                    <td>
                      <a
                        href="/admin/blogs/<%= item.id %>/update"
                        class="product-link"
                      >
                        <i class="fas fa-pencil-alt" style="color: cadetblue"></i>
                      </a>
                    </td>
                    <td>
                      <a
                        href="/admin/blogs/<%= item.id %>"
                        class="product-link"
                      >
                        <i class="fas fa-eye" style="color: bisque"></i>
                      </a>
                    </td>
                    <td>
                      <form action="/api/v1/blogs/<%= item.id %>?_method=delete" method="post" class="mb-0">
                        <button class="product-link btn">
                          <i class="fas fa-trash-alt" style="color: red"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!-- table container -->
          <a
            href="/admin/blogs/create"
            class="btn btn-primary btn-block text-uppercase mb-3"
            >Add new blog</a
          >
          <button class="btn btn-primary btn-block text-uppercase">
            Delete selected blogs
          </button>
        </div>
      </div>
      
      <%- include('../../layouts/footer.ejs') %>
    </div>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
