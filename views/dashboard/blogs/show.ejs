<html lang="en">
  <head>
    <%- include('../../layouts/head.ejs') %>
  </head>
  <body>
    <div id="home">
      <%- include('../../layouts/navbar.ejs') %>
      <div class="container mt-big mb-big">
        <div class="row">
          <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="bg-primary-dark block block-h-auto">
              <div class="row">
                <div class="col-6">
                  <h2 class="block-title d-inline-block">Show Blog</h2>
                </div>
                <div class="col-6">
                  <a href="/admin/blogs/<%= blog.id %>/update" class="back-btn-edit">
                    Want to edit? click me!
                  </a>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group mb-3">
                    <label for="title">Title</label>
                    <input
                      id="title"
                      title="title"
                      type="text"
                      class="form-control"
                      value="<%= blog.title %>"
                      disabled
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label for="editor">Content</label>
                    <textarea
                      class="form-control"
                      rows="3"
                      name="content"
                      disabled
                    ><%= blog.content %></textarea>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../../layouts/footer.ejs') %>
    </div>

    <%- include('../../layouts/ckeditor.ejs') %>
    
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
