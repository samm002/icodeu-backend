<!doctype html>
<html lang="en">
  <head>
    <%- include('../../layouts/head.ejs') %>
  </head>
  <body id="reportsPage">
    <div id="home">
      <%- include('../../layouts/navbar.ejs') %>
      <div class="container mt-big mb-big">
        <div class="row">
          <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="bg-primary-dark block block-h-auto">
              <div class="row">
                <div class="col-6">
                  <h2 class="block-title d-inline-block">Show User</h2>
                </div>
                <div class="col-6">
                  <a href="/admin/users/<%= user.id %>/update" class="back-btn-edit">
                    Want to edit? click me!
                  </a>
                </div>
              </div>
              <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-12">
                  <div class="form-group mb-3">
                    <label for="name">Name</label>
                    <input
                      id="name"
                      name="name"
                      type="text"
                      class="form-control validate"
                      value="<%= user.name %>"
                      disabled
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input
                      id="email"
                      name="email"
                      type="text"
                      class="form-control validate"
                      value="<%= user.email %>"
                      disabled
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label for="address">Address</label>
                    <input
                      id="address"
                      name="address"
                      type="text"
                      class="form-control validate"
                      value="<%= user.address %>"
                      disabled
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label for="phoneNumber">Phone Number</label>
                    <input
                      id="phoneNumber"
                      name="phoneNumber"
                      type="number"
                      class="form-control validate"
                      value="<%= user.phoneNumber %>"
                      disabled
                    />
                  </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                  <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input
                      id="password"
                      name="password"
                      type="password"
                      class="form-control validate"
                      value="<%= user.password %>"
                      disabled
                    />
                  </div>
                  <div class="mb-3">
                    <!-- image preview before on onchange -->
                    <div class="container-image" id="upload-icon">
                      <img src="<%= user.profilePicture %>" alt="<%= user.name %>">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../../layouts/footer.ejs') %>
    </div>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
