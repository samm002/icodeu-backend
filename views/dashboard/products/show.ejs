<!doctype html>
<html lang="en">
  <head>
    <%- include('../../layouts/head.ejs') %>
  </head>
  <body id="reportsPage">
    <div id="home">
      <%- include('../../layouts/navbar.ejs') %>
      <div class="container mt-big mb-big">
        <div class="row">
          <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="bg-primary-dark block block-h-auto">
              <div class="row">
                <div class="col-6">
                  <h2 class="block-title d-inline-block">Show Product</h2>
                </div>
                <div class="col-6">
                  <a href="/admin/products/<%= product.id %>/update" class="back-btn-edit">
                    Want to edit? click me!
                  </a>
                </div>
              </div>
              <div class="row">
                <div class="d-flex flex-wrap">
                  <div class="col-xl-6 col-lg-6 col-md-12">
                    <div class="form-group mb-3">
                      <label for="name">Product Name</label>
                      <input
                        id="name"
                        name="name"
                        type="text"
                        class="form-control validate"
                        value="<%= product.name %>"
                        disabled
                      />
                    </div>
                    <div class="form-group mb-3">
                      <label for="description">Description</label>
                      <textarea
                        class="form-control validate"
                        rows="3"
                        name="description"
                        disabled
                      ><%= product.description %></textarea>
                    </div>
                    <div class="form-group mb-3">
                      <label for="type">Type</label>
                      <% const options = ['multi', 'single']; %>
                      <select
                        class="custom-select"
                        id="type"
                        value="<%= product.type %>"
                        name="type"
                        disabled
                      >
                        <% options.forEach(function(option) { %>
                          <option value="<%= option %>" <%= option === product.type ? 'selected' : '' %> ><%= option %></option>
                        <% }); %>
                      </select>
                    </div>
                    <div class="form-group mb-3">
                      <label for="price">Price</label>
                      <input
                        id="price"
                        name="price"
                        type="number"
                        class="form-control validate"
                        value="<%= product.price %>"
                        disabled
                      />
                    </div>
                    <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label for="discount">Discount</label>
                        <input
                          id="discount"
                          name="discount"
                          type="number"
                          class="form-control validate"
                          value="<%= product.discount %>"
                          disabled
                        />
                      </div>
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label for="discountedPrice">Discounted Price</label>
                        <input
                          id="discountedPrice"
                          name="discountedPrice"
                          type="number"
                          class="form-control validate"
                          value="<%= product.discountedPrice %>"
                          disabled
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                    <div class="form-group mb-3">
                      <label for="features">Features</label>
                      <textarea
                        class="form-control validate"
                        rows="3"
                        disabled
                        id="features"
                        name="features"
                        oninput="handleTextareaChange()"
                      ><%= product.features %></textarea>
                    </div>
                    <div class="slider" id="upload-icon">
                      <div class="slides">
                        <% product.images.map((image) => { %>
                          <img class="slide" src="<%= image %>" alt="Image">
                        <% }) %>
                      </div>
                      <button
                        type="button"
                        class="prev"
                        onclick="prevSlide()"
                      >
                        &#8249;
                      </button>
                      <button
                        type="button"
                        class="next"
                        onclick="nextSlide()"
                      >
                        &#8250;
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../../layouts/footer.ejs') %>
    </div>

    <%- include('../../layouts/script.ejs') %>
    <%- include('../../layouts/upload.ejs') %>
  </body>
</html>
