<!doctype html>
<html lang="en">
  <head>
    <%- include('../../layouts/head.ejs') %>
  </head>
  <body id="reportsPage">
    <div id="home">
      <%- include('../../layouts/navbar.ejs') %>
      <div class="container tm-mt-big tm-mb-big">
        <div class="row">
          <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
              <div class="row">
                <div class="col-12">
                  <h2 class="tm-block-title d-inline-block">Show Product</h2>
                </div>
              </div>
              <div class="row">
                <div class="d-flex flex-wrap">
                  <div class="col-xl-6 col-lg-6 col-md-12">
                    <div class="form-group mb-3">
                      <label for="name">Product Name</label>
                      <input
                        id="name"
                        name="name"
                        type="text"
                        class="form-control validate"
                        value="<%= product.name %>"
                        disabled
                      />
                    </div>
                    <div class="form-group mb-3">
                      <label for="description">Description</label>
                      <textarea
                        class="form-control validate"
                        rows="3"
                        name="description"
                        disabled
                      ><%= product.description %></textarea>
                    </div>
                    <div class="form-group mb-3">
                      <label for="type">Type</label>
                      <select
                        class="custom-select tm-select-accounts"
                        id="type"
                        value="<%= product.type %>"
                        name="type"
                        disabled
                      >
                        <option
                          value="multi"
                          selected="<%= product.type === 'multi' ? true : false %>"
                        >
                          Multi
                        </option>
                        <option
                          value="single"
                          selected="<%= product.type === 'single' ? true : false %>"
                        >
                          Single
                        </option>
                      </select>
                    </div>
                    <div class="form-group mb-3">
                      <label for="price">Price</label>
                      <input
                        id="price"
                        name="price"
                        type="number"
                        class="form-control validate"
                        value="<%= product.price %>"
                        disabled
                      />
                    </div>
                    <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label for="discount">Discount</label>
                        <input
                          id="discount"
                          name="discount"
                          type="number"
                          class="form-control validate"
                          value="<%= product.discount %>"
                          disabled
                        />
                      </div>
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                        <label for="discountedPrice">Discounted Price</label>
                        <input
                          id="discountedPrice"
                          name="discountedPrice"
                          type="number"
                          class="form-control validate"
                          value="<%= product.discountedPrice %>"
                          disabled
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                    <div class="form-group mb-3">
                      <label for="features">Features</label>
                      <textarea
                        class="form-control validate"
                        rows="3"
                        disabled
                        id="features"
                        name="features"
                        oninput="handleTextareaChange()"
                      ><%= product.features %></textarea>
                    </div>
                    <div class="tm-product-img-dummy mx-auto">
                      <i
                        class="fas fa-cloud-upload-alt tm-upload-icon"
                        onclick="document.getElementById('fileInput').click();"
                      ></i>
                    </div>
                    <div class="custom-file mt-3 mb-3">
                      <input id="fileInput" type="file" style="display: none" />
                      <input
                        type="button"
                        class="btn btn-primary btn-block mx-auto"
                        value="UPLOAD PRODUCT IMAGE"
                        onclick="document.getElementById('fileInput').click();"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../../layouts/footer.ejs') %>
    </div>

    <%- include('../../layouts/script.ejs') %>
    <script>
      function handleTextareaChange() {
        const textareaValue = document.getElementById('features').value;
        const linesArray = textareaValue.split('\n');

        // Optionally filter out empty lines
        const filteredArray = linesArray.filter((line) => line.trim() !== '');

        document.getElementById('output').innerText = JSON.stringify(
          filteredArray,
          null,
          2,
        );
      }
    </script>
  </body>
</html>
