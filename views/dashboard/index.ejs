<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap and font-awesome -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="../../public/styles/mainStyle.css" />
    <!-- datatables css setting -->
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.3/css/dataTables.jqueryui.min.css"
    />
    <link
      rel="stylesheet"
      href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"
    />
    <!-- datatables javascript setting -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.jqueryui.min.js"></script>
    <script>
      $(document).ready(function () {
        $('#example').DataTable();
      });
    </script>
    <title>DISTRIBUTOR</title>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600&display=swap');
      body {
        font-family: Poppins, 'sans serif';
        overflow: auto;
      }

      :root {
        --main-bg-color: #415471;
        --main-text-color: #fff;
        --second-bg-color: #f1f5f9;
      }

      .primary-text {
        color: var(--main-text-color);
      }

      .secondary-bg {
        background-color: var(--second-bg-color);
      }

      .rounded-full {
        border-radius: 100%;
      }

      #wrapper {
        overflow-x: hidden;
      }

      #sidebar-wrapper {
        min-height: 100vh;
        position: fixed;
        width: 300px;
        background: var(--main-bg-color);
        -webkit-transition: margin 0.5s ease-out;
        -moz-transition: margin 0.5s ease-out;
        -o-transition: margin 0.5s ease-out;
        transition: margin 0.3s ease-out;
      }

      #sidebar-wrapper .sidebar-heading {
        padding: 0.875rem 1.25rem;
        font-size: 1.2rem;
      }

      #sidebar-wrapper .list-group {
        width: 300px;
      }

      #page-content-wrapper {
        min-width: 100vw;
        margin-left: 300px;
        -webkit-transition: margin 0.5s ease-out;
        -moz-transition: margin 0.5s ease-out;
        -o-transition: margin 0.5s ease-out;
        transition: margin 0.3s ease-out;
      }

      #wrapper.toggled #sidebar-wrapper {
        margin-left: -300px;
      }
      #wrapper.toggled #page-content-wrapper {
        margin-left: 0;
      }

      #menu-toggle {
        cursor: pointer;
      }

      .list-group-item {
        border: none;
        padding: 18px 30px;
        color: var(--main-text-color);
        font-size: 15px;
        background-color: var(--main-bg-color);
      }

      .navGroup:hover {
        background-color: var(--main-text-color);
        color: var(--main-bg-color);
        border: 2px solid white;
        padding-top: 1rem;
        padding-bottom: 1rem;
        border-radius: 30px 0px 0px 30px;
      }

      @media screen and (min-width: 100px) {
        #sidebar-wrapper {
          margin-left: 0;
        }
        #page-content-wrapper {
          min-width: 0;
          width: 100%;
        }
      }
      @media screen and (min-width: 100px) {
        .overflow-x {
          overflow-x: scroll;
        }
        .overflow-x::-webkit-scrollbar {
          width: 5px;
          height: 6px;
        }
        .overflow-x::-webkit-scrollbar-thumb {
          background-color: var(--main-bg-color);
        }
        .overflow-x::-webkit-scrollbar-track {
          background-color: #f1f1f1;
        }
      }
      #extend {
        color: red;
        font-size: 15px;
      }

      .kelas {
        color: var(--main-bg-color);
      }
      #navbarDropdown {
        font-size: 15px;
      }
      .tambah {
        margin-bottom: 3rem;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      }
      .cardss {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: none;
      }

      .card-title {
        color: var(--main-text-color);
        height: 30px;
        font-weight: bolder;
        font-size: 30px;
      }
      .button {
        width: 100%;
        border: none;
        padding: none;
      }
      .ftr {
        background: #6f7788;
        display: flex;
        font-size: 18px;
      }
    </style>
  </head>

  <body>
    <div class="d-flex" id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <div
          class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom"
        >
          <i
            class="fas fa-user"
            style="font-size: 27px; margin-left: -10px"
          ></i>
          ICODEU
        </div>

        <div class="list-group my-3 ps-5">
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="fas fa-tachometer-alt me-4"></i>Dashboard</a
          >
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="fas fa-chart-line me-4"></i>Penjualan</a
          >
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="bi bi-file-earmark-bar-graph-fill me-4"></i>Data Pasok</a
          >
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="fas fa-book me-4"></i>Buku</a
          >
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="fas fa-user-cog me-4"></i>Distributor</a
          >
          <a href="#" class="list-group-item fw-bold navGroup"
            ><i class="fas fa-cog me-4"></i>Settings</a
          >
          <a href="#" class="list-group-item fw-bold logOut" id="extend"
            ><i class="fas fa-power-off me-4"></i>Logout</a
          >
        </div>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <nav
          class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4 tambah"
        >
          <div class="d-flex align-items-center">
            <i class="fas fa-align-left fs-4 me-3" id="menu-toggle"></i>
            <h2 class="fs-2 m-0 kelas">DISTRIBUTOR</h2>
          </div>

          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="navbarDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="fas fa-user me-2"></i>UserAdmin
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="#">Profile</a></li>
                  <li><a class="dropdown-item" href="#">Settings</a></li>
                  <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Modal -->
        <button
          type="button"
          class="btn btn-success ms-5"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add
        </button>
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title" style="margin-left: 12rem">Add Data</h3>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="mb-3">
                    <label for="exampleNama" class="form-label"
                      >Nama Distributor</label
                    >
                    <input type="text" class="form-control" />
                    <!-- value -->
                  </div>
                  <div class="mb-3">
                    <label for="exampleAlamat" class="form-label">Alamat</label>
                    <input type="text" class="form-control" />
                    <!-- value -->
                  </div>
                  <div class="mb-3">
                    <label for="exampleTelepon" class="form-label"
                      >Telepon</label
                    >
                    <input type="text" class="form-control" />
                    <!-- value -->
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <a href="#" class="btn btn-success">Add Data</a>
              </div>
            </div>
          </div>
        </div>

        <div class="my-3 mx-5 overflow-x">
          <table
            id="example"
            class="table table-striped table-hover display nowrap"
            style="width: 100%"
          >
            <thead>
              <tr>
                <th style="width: 20px">NO</th>
                <th>NAME</th>
                <th style="width: 190px">ADDRESS</th>
                <th style="width: 190px">EMAIL</th>
                <th>PHONE NUMBERS</th>
                <th style="width: 100px">ACTION</th>
              </tr>
            </thead>
            <!-- isi nilai disini -->
            <% users.forEach(element => { %>
              <tbody>
                <td><%= element.id %></td>
                <td><%= element.name %></td>
                <td><%= element.address %></td>
                <td><%= element.email %></td>
                <td><%= element.phoneNumber %></td>
                <td style="align-items: center">
                  <button
                    type="button"
                    class="btn btn-success mx-2"
                    data-bs-toggle="modal"
                    data-bs-target="#sampleEdit"
                  >
                    Edit
                  </button>
                  <div
                    class="modal fade"
                    id="sampleEdit"
                    tabindex="-1"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h3 class="modal-title" style="margin-left: 12rem">
                            Edit Data
                          </h3>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body">
                          <form>
                            <div class="mb-3">
                              <label for="exampleNama" class="form-label"
                                >Nama Distributor</label
                              >
                              <input type="text" class="form-control" />
                              <!-- value -->
                            </div>
                            <div class="mb-3">
                              <label for="exampleAlamat" class="form-label"
                                >Alamat</label
                              >
                              <input type="text" class="form-control" />
                              <!-- value -->
                            </div>
                            <div class="mb-3">
                              <label for="exampleTelepon" class="form-label"
                                >Telepon</label
                              >
                              <input type="text" class="form-control" />
                              <!-- value -->
                            </div>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-danger"
                            data-bs-dismiss="modal"
                          >
                            Close
                          </button>
                          <a href="#" class="btn btn-success">Edit Data</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <a class="btn btn-danger" href="#">Delete</a>
                </td>
              </tbody>
              <% }) %>
          </table>
        </div>

        <footer class="py-2 mt-auto ftr">
          <div class="container-fluid">
            <div
              class="d-flex align-items-center justify-content-between small"
            >
              <div>Copyright &copy; Your Website 2021</div>
              <div>Created By Kelompok 4</div>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      var el = document.getElementById('wrapper');
      var toggleButton = document.getElementById('menu-toggle');

      toggleButton.onclick = function () {
        el.classList.toggle('toggled');
      };
    </script>
  </body>
</html>
